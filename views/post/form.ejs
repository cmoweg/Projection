<form action="/page/<%=nav %>/<%=form %>/post/1" method="post">
    <!--id 번호 제대로-->
       
    <main id="post_main">

        <div>
            <h1>글 작성</h1>
            <p class="list"><a href="/page/<%=nav %>/<%=form %>" id="list_link">목록으로</a></p>
        </div>

        <div class="box">

            <p id="title" class="contents">
                제목 <input type="text" class="input_text" name="title">
            </p>

            <p id="short_description" class="contents">
                한줄설명 <input type="text" class="input_text" name="short_description">
            </p>

            <% if(class_info){ %>
                <p id="class_info" class="contents">
                    학수번호 <input type="text" class="input_text" name="class_name"> 분반 <input type="text" class="input_text" name="class_num">
                </p>
            <% } %>

            <% if(subject){ %>
                <p id="subject" class="contents">
                분야 <input type="text" class="input_text" name="subject">
                </p>
            <% } %>

            <p id="current_num" class="contents">
                현재 팀원 수 <input type="text" class="input_text" name="current_num">
            </p>

            <p id="num" class="contents">
                모집 인원 <input type="text" class="input_text" name="recruit_num">
            </p>

            <p id="recruit_period" class="contents">
                모집 기간 <input type="date" name="recruit_start_date"> ~ <input type="date" name="recruit_end_date">
            </p>
                           
            <% if(position){ %>       
                <p id="position" class="contents">           
                    모집 포지션 <input type="text" class="input_text" name="position">                                   
                </p>                                    
            <% } %>
                                   
                <p id="Activity_period" class="contents">                                        
                    활동 기간: 시작일 <input type="date" name="start_date"> / 마감일 <input type="date" name="end_date"> <input type="checkbox" name="TBD" id=""> 추후 결정            
                </p>
                                  
                <p id="goal" class="contents">                                       
                    목표 <input type="text" class="input_text" name="goal" class="contents">                                      
                </p>
                                  
                <p id="attachment" class="contents">                                         
                    파일 첨부 <input type="text" name="attachment" id=""  class="input_text">                               
                </p>
                                  
                <p id="description" class="contents">                                         
                    상세 설명:                                        
                    <br>                                      
                    <textarea name="description" id="textbox" cols="50" rows="10" placeholder="상세 설명을 적어주세요."></textarea>           
                </p>
                                 
                <p id="image" class="contents">                                         
                    모집 공고 이미지 선택 <input type="text" name="image" id=""  class="input_text">                                      
                </p>
        </div>
        <button id="submit" class="show blue">작성완료</button>
    </form>